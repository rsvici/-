/**order.wxss**/
.orderlist {
  margin: 30rpx auto;
  width: 700rpx;
  min-height: 100rpx;
  border-radius: 10rpx;
  background-color: #F6F6F6;
  padding-bottom: 30rpx;
}

/* 商品参数 */
.goodsinfo {
  width: 700rpx;
  padding: 30rpx;
  padding-bottom: 15rpx;
  overflow: hidden;
}

.goodsinfo .goodsImg {
  width: 121rpx;
  height: 120rpx;
  float: left;
}

.goodsinfo .goodsImg image {
  width: 121rpx;
  height: 120rpx;
}

.goodsinfo .goodsParames {
  margin-top: 25rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  width: 480rpx;
  float: right;
  background-color: #e9e9e9;
}

.goodsinfo .goodsParames view {
  font-size: 30rpx;
}

/* 购买信息 */
.formItem {
  width: 680rpx;
  margin: 20rpx auto;
  overflow: hidden;
  position: relative;
}

.formItem text,
.formItem input,
.formItem textarea,
.formItemInputPlaceholder {
  box-sizing: border-box;
  font-size: 30rpx;
  float: left;
  color: #000;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 20rpx;
}
.formItem text{
  text-align: right;
  width: 140rpx;
  margin-right: 30rpx;
}
.formItem input ,
  .formItem textarea {
  width: 490rpx;
  background-color: #e9e9e9;
  border-radius: 10rpx;
} 
.formItem textarea {
  min-height: 100rpx;
}


/* 设置数量 */
.setnum {
  z-index: 999;
  position: absolute;
  right: 20rpx;
  top: 0;
  padding: 0 10rpx;
  height: 52rpx;
}

.setnum view {
  font-size: 25rpx;
  float: left;
  color: #323232;
  font-family: PingFangSC-Regular;
  height: 52rpx;
  line-height: 52rpx;
}

.setnum .span1 {
  color: #d3d3d3;
  font-size: 60rpx;
}

.setnum .span2 {
  border: 1px solid #d3d3d3;
  text-align: center;
  font-size: 25rpx;
  margin: 0 10rpx;
  padding:0 10rpx;
}

.setnum .span3 {
  color: #d3d3d3;
  font-size: 40rpx;
}

/* 金额 */
.allprice{
  width: 640rpx;
  margin: 30rpx auto 0;
  text-align: right;
  font-size: 28rpx;
}