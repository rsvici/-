#register {
    padding-top: 40rpx;
}

.formItem{
    width: 680rpx;
    border-bottom: 1px solid #d4d4d4;
    margin: 35rpx auto;
    overflow: hidden;
}

.formItem text,
.formItem input,
.formItemInputPlaceholder {
    font-size: 30rpx;
    float: left;
    color: #000;
    height: 50rpx;
    line-height: 50rpx;
}

.picker {
    font-size: 30rpx;
    color: #000;
    height: 50rpx;
    line-height: 50rpx;
}

.formItem text{
    margin-right: 10rpx;
}

.tel_input {
    width: 350rpx;
    color: #797979;
    float: left;
    box-sizing: border-box;
}

.tel_btn {
    width: 170rpx;
    height: 40rpx;
    background-color: #725635;
    float: right;
    border-radius: 20rpx;
    color: #fff;
    font-size: 20rpx;
    line-height: 40rpx;
    text-align: center;
}


/* 上传图片 */

/* 添加图片 */
.formItemaddImg{
    border: 0;
}
.addText {
    font-size: 30rpx;
    color: #000;
    height: 50rpx;
    line-height: 50rpx;
    width: 140rpx;
    float: left;
}

.addimg {
    float: left;
    width: 300rpx;
    background-color: #fff;
}

.addimg image {
    width: 281rpx;
    height: 192rpx;
}

.addimg .newImg {
    width: 281rpx;
    height: 192rpx;
}

.addimg canvas {
    width: 281rpx;
    height: 192rpx;
}














.bindphone_tel .bindInput {
    width: 100%;
}

.bindphone_tel .tel_place {
    font-size: 25rpx;
    color: #BABABA;
    height: 50rpx;
    line-height: 50rpx;
}

.bindphone_tel .tel_btn {
    width: 185rpx;
    height: 70rpx;
    background-color: #64BEDA;
    float: right;
    border-radius: 10rpx;
    color: #fff;
    font-size: 20rpx;
    line-height: 70rpx;
    text-align: center;
}

.submit {
    width: 300rpx;
    text-align: center;
    background-color: #9B9B9B;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 28rpx;
    margin: 0 auto;
    color: #fff;
    margin-top: 30rpx;
    border-radius: 10rpx;
}