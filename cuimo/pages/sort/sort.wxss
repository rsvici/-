/**sort.wxss**/
#home{
  background-color: #ECEBEB;
}
#home .swiper {
  width: 750rpx;
  height: 340rpx;
  position: relative;
}

#home .swiper swiper {
  width: 750rpx;
  height: 340rpx;
}

#home swiper image {
  width: 750rpx;
  height: 340rpx;
}

#home .swiper .left,
#home .swiper .right {
  width: 36rpx;
  height: 72rpx;
  position: absolute;
  top: 134rpx;
}

#home .swiper .left {
  left: 30rpx;
}

#home .swiper .right {
  right: 30rpx;
}

#home .swiper .left image,
#home .swiper .right image {
  width: 36rpx;
  height: 72rpx;
}


/* 商品列表 */
.goodslist{
  box-sizing: border-box;
  width: 100vw;
  padding: 50rpx 40rpx 50rpx 50rpx;
  overflow: hidden;
}
.goodslist .item{
  float: left;
  width: 320rpx;
  text-align: center;
}
.goodslist .item{
  margin-right: 10rpx;
  margin-bottom: 20rpx;
}
.goodslist .item image{
  width: 320rpx;
  height: 266.7rpx;
}
.goodslist .item .name{
  font-size: 31rpx;
}
.goodslist .item .price text{
  font-size: 28rpx;
  padding: 0rpx 15rpx;
  border: 1px solid #555;
}