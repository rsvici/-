/* 设置微信昵称头像 */
.login_logo {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
  margin: 150rpx auto 0;
  overflow: hidden;
  display: block;
}

.login_name {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 auto;
  text-align: center;
  display: block;
  font-size: 28rpx;
}

/* 文字超出隐藏 */
.clamp1 {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.clamp2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.clamp3 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.color_blue {
  color: #3792DF;
}

.color_red {
  color: red;
}

/* 商户商品信息 */
.pay_shoplist {
  width: 700rpx;
  margin: 0 auto 20rpx;
  padding-top: 1rpx;
}

.pay_shoplist_shopitem {
  background-color: #fff;
  padding: 0 20rpx;
  border-radius: 7rpx;
  margin-top: 20rpx;
}

.pay_shoplist_shopitem_shopname {
  font-size: 24rpx;
  height: 65rpx;
  line-height: 65rpx;
  color: rgba(90, 90, 90, 1);
  border-bottom: 1rpx solid #A3A3A3;
}

.pay_shoplist_shopitem_shopname image {
  display: inline-block;
  width: 28rpx;
  height: 25.5rpx;
  vertical-align: -1rpx;
}

.pay_shoplist_shopitem_goodslist {
  padding: 33rpx 0 33rpx 35rpx;
  width: 100%;
}

.pay_shoplist_shopitem_goodslist_goodsitem {
  width: 100%;
  overflow: hidden;
  margin-top: 20rpx;
}

.pay_shoplist_shopitem_goodslist_goodsitem_left {
  float: left;
  width: 183rpx;
  height: 179rpx;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 50%;
  background-color: #F5F5F5;
  border-radius: 7rpx;
}
.pay_shoplist_shopitem_goodslist_goodsitem_left image{
  width: 100%;
}

.pay_shoplist_shopitem_goodslist_goodsitem_right {
  width: 400rpx;
  margin-left: 20rpx;
  float: left;
}

.pay_shoplist_shopitem_goodslist_goodsitem_right_title {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  height: 60rpx;
  line-height: 60rpx;
}

.pay_shoplist_shopitem_goodslist_goodsitem_right_type {
  font-size: 27rpx;
  font-weight: 400;
  color: #5A5A5A;
  height: 60rpx;
  line-height: 50rpx;
}

.pay_shoplist_shopitem_goodslist_goodsitem_right_first {
  overflow: hidden;
  width: 100%;
  height: 50rpx;
  margin-top: 10rpx;
}

.pay_shoplist_shopitem_goodslist_goodsitem_right_first_price {
  float: left;
  width: 40%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(255, 0, 0, 1);
}

.pay_shoplist_shopitem_goodslist_goodsitem_right_first_num {
  float: right;
  width: 40%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 27rpx;
  font-weight: 400;
  color: rgba(90, 90, 90, 1);
  text-align: right;
}


