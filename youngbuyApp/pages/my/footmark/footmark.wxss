/**footmark.wxss**/
.footmark {
  background-color: #F8F8F8;
  padding: 5rpx;
  overflow: hidden;
}

.like_item {
  float: left;
  margin: 10rpx;
  width: 350rpx;
  margin-top: 20rpx;
  background-color: #fff;
  position: relative;
  border-radius: 10rpx;
}

/* zuo */
.like_item_left {
  position: relative;
  width: 355rpx;
  height: 300rpx;
  background-color: #999;
  border-radius: 10rpx;
}

.like_item_left>image {
  width: 355rpx;
  height: 300rpx;
}

.like_item_left_nav {
  position: absolute;
  top: 0;
  right: 0;
}

.like_item_left_nav1 {
  position: absolute;
  top: -10rpx;
  left: -10rpx;
}

.like_item_left_nav.ms image {
  width: 110rpx;
  display: block;
}

.like_item_left_nav.pt image {
  width: 50rpx;
  display: block;
}

.like_item_left_nav1.ys image {
  width: 70rpx;
  display: block;
}


/* you */
.like_item_right {
  width: 300rpx;
  padding: 10rpx;
}

.like_item_right_name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  color: #000;
}

.like_item_right_specs {
  font-size: 25rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.like_item_right_price {
  height: 50rpx;
  line-height: 65rpx;
  color: #FE1717;
  font-size: 28rpx;
}

/* 按钮 */
.like_item_btn {
  position: absolute;
  bottom: 25rpx;
  right: 25rpx;
  width: 200rpx;
  height: 60rpx;
  /* background-color: #FE1717; */
}

.like_item_btn_shopcar {
  position: absolute;
  bottom: 0rpx;
  right: 15rpx;
  width: 50rpx;
}

.like_item_btn_shopcar image {
  width: 50rpx;
}