/* 添加图片 */
.identityaddImg {
  border: 0;
  position: relative;
  background-color: #fff;
  overflow: hidden;
}

.identityaddImg .addText {
  height:80rpx;
  line-height:80rpx;
  color: #000;
  padding-left: 42rpx;
  font-size: 32rpx;
}

.identityaddImg .addimg {
  margin: 10rpx auto;
  width: 347rpx;
  height: 217rpx;
}

.identityaddImg .addimg image {
  width: 347rpx;
  height: 217rpx;
}

.identityaddImg .addimg .newImg {
  width: 347rpx;
  height: 217rpx;
}

.identityaddImg .addimg canvas {
  width: 347rpx;
  height: 217rpx;
}

.addimgText {
  text-align: center;
  height: 100rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(192, 191, 192, 1);
}















