  width: 180rpx;
  padding-left: 42rpx;
  font-size: 32rpx;
  /* text-align-last: justify; */
}

.identity_tip {
  margin-top: 2rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 21rpx;
  font-weight: 400;
  color: rgba(255, 0, 0, 1);
  text-align: right;
  padding-right: 47rpx;
  background-color: #fff;
