.address {
  background-color: #F8F8F8;
  padding: 30rpx 0;
}

.address_formItem>text,
.address_formItem input {
  height: 106rpx;
  line-height: 106rpx;
  float: left;
  color: #000;
}

.address_formItem input {
  width: 470rpx;
  color: #707070;
}

